---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<section class="w-full lg:w-[740px] mx-auto py-44">
			<h1 class="text-5xl font-bold flex flex-row gap-x-4 pb-4">
				Hi, I'm Valp
				<a
					href="https://www.linkedin.com/in/valp-pinedo/"
					target="_blank"
					class="flex justify-center items-center"
				>
					<Badge>Open to Work</Badge>
				</a>
			</h1>
			<h2 class="text-2xl opacity-80 text-wrap">
				+12 years of experience Software Engineer.In-deep JavaScripp
			</h2>

			<nav class="flex gap-x-4 mt-8">
				<SocialPill href="https://www.linkedin.com/in/valp-pinedo">
					<LinkedinIcon class="w-6 h-6" />
					LinkedIn
				</SocialPill>

				<SocialPill href="https://github.com/vapinedo">
					<GithubIcon class="w-6 h-6" />
					Github
				</SocialPill>

				<SocialPill href="https://github.com/vapinedo">
					<MailIcon class="w-6 h-6" />
					victorpinedomartinez@gmail.com
				</SocialPill>
			</nav>
		</section>
	</main>
</Layout>
